@model UserTypeViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}
<div class="col-12">
    <div class="float-left">
        <h6 class="mb-0 text-uppercase ">KULLANICI TİPİ LİSTESİ</h6>
    </div>

</div>
<hr />
<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-primary float-right" data-bs-toggle="modal" data-bs-target="#examplePrimaryModal"> Yeni Kullanıcı Tipi</button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="example2" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Kullanıcı Tipi</th>
                        <th>Sil</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.UserTypeList)
                    {
                        <tr>

                            <td>@item.TypeName</td>
                            <td><a href="/User/Delete/#" class="btn btn-danger btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#exampleDangerModal">Sil</a></td>
                            @*<td><button type="button" href="#" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#exampleWarningModal">Düzenle</button></td>*@
                            <td><button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#exampleWarningModal"> Düzenle</button></td>
                        </tr>

                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>Kullanıcı Tipi</th>
                        <th>Sil</th>
                        <th>Düzenle</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>



@foreach (var item in Model.UserTypeList)
{
    @using (Html.BeginForm("Create", "UserType", FormMethod.Post))
    {
        <div class="col">
            <!-- Button trigger modal -->
            <!-- Modal -->
            <div class="modal fade" id="examplePrimaryModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Departman Ekle</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <label>Departman Adı</label>
                            <input type="text" id="TypeName" name="TypeName" placeholder="" class="form-control" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Geri Dön</button>
                            @*<button type="button" class="btn btn-dark">Save changes</button>*@
                            <input type="submit" name="Ekle" value="Ekle" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @using (Html.BeginForm("Edit", "UserType", new { id = @item.UserTypeId,userTypeName=item.TypeName }))
    {
        <div class="col">
            <!-- Button trigger modal -->
            <!-- Modal -->
            <div class="modal fade" id="exampleWarningModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Departman Düzenle</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <label>Departman Adı</label>
                            <input type="text" id="TypeName" name="TypeName" placeholder="" class="form-control" />
                            <div style="visibility:hidden;">
                                <input type="text" id="UserTypeId" name="UserTypeId" placeholder="" class="form-control" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Geri Dön</button>
                            <input type="submit" name="Güncelle" value="Güncelle" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>



    }

    @using (Html.BeginForm("Delete", "UserType", new { id = @item.UserTypeId }))
    {
        <div class="col">
            <!-- Button trigger modal -->
            <!-- Modal -->
            <div class="modal fade" id="exampleDangerModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Departman Silme</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <p>Silmek istiyor musunuz?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Geri Dön</button>
                            <a href="/UserType/Delete/@item.UserTypeId" name="Sil" value="Sil" class="btn btn-success">Sil</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    }


}


